{
  "name": "mdx-seo-validator",
  "displayName": "MDX SEO Validator",
  "description": "VS Code extension for real-time SEO validation of MDX/Markdown with live Google preview. Validate meta tags, check SEO scores, and optimize content for Next.js, Astro, and Remix sites.",
  "version": "1.0.1",
  "publisher": "rampify",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "seo",
    "seo-tools",
    "seo-validation",
    "seo-checker",
    "mdx",
    "markdown",
    "nextjs",
    "astro",
    "remix",
    "meta-tags",
    "meta-tag-validator",
    "content-seo",
    "developer-tools",
    "vscode-extension",
    "real-time",
    "google-preview",
    "open-graph",
    "schema.org",
    "seo-linter",
    "technical-seo"
  ],
  "activationEvents": [
    "onLanguage:mdx",
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "seo.openPreview",
        "title": "SEO: Open Preview Panel",
        "icon": "$(search)"
      },
      {
        "command": "seo.validateFile",
        "title": "SEO: Validate Current File"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "seo-validator",
          "title": "SEO Validator",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "seo-validator": [
        {
          "type": "webview",
          "id": "seoPreview",
          "name": "SEO Preview"
        }
      ]
    },
    "configuration": {
      "title": "MDX SEO Validator",
      "properties": {
        "seo.siteDomain": {
          "type": "string",
          "default": "example.com",
          "description": "Your site domain (for URL preview)"
        },
        "seo.devServerUrl": {
          "type": "string",
          "default": "",
          "description": "Your local dev server URL (e.g., http://localhost:3000) - for validating rendered HTML"
        },
        "seo.contentPath": {
          "type": "string",
          "default": "content",
          "description": "Path to your content directory (e.g., 'content', 'src/content')"
        },
        "seo.urlPattern": {
          "type": "string",
          "default": "/blog/{slug}",
          "description": "URL pattern for content pages (e.g., '/blog/{slug}', '/docs/{slug}')"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify",
    "watch": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap --watch",
    "dev": "npm run watch",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "unified": "^11.0.4",
    "remark-parse": "^11.0.0",
    "remark-mdx": "^3.0.0",
    "remark-frontmatter": "^5.0.0",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rampify-dev/mdx-seo-validator"
  },
  "homepage": "https://rampify.dev",
  "bugs": {
    "url": "https://github.com/rampify-dev/mdx-seo-validator/issues"
  },
  "galleryBanner": {
    "color": "#0e639c",
    "theme": "dark"
  }
}
